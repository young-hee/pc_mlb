<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource3" class="net.sf.log4jdbc.Log4jdbcProxyDataSource">
		<constructor-arg ref="realDataSource3" />
		<property name="logFormatter">
			<bean class="net.sf.log4jdbc.tools.Log4JdbcCustomFormatter">
				<property name="loggingType" value="MULTI_LINE" />
				<property name="sqlPrefix" value="SQL:::" />
			</bean>
		</property>
	</bean>
	
	<bean id="transactionManager3"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="dataSource3" />

	<!-- Mybatis Configuration -->
	<bean id="sessionFactory3" class="com.plgrim.ncp.framework.mybatis.RefreshableSqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource3" />
		<property name="interval" value="5000" />
		<property name="typeAliasesPackage"
			value="${ncp_base.datasource3.mybatis.type.alias.package}" />
		<property name="configLocation" value="${ncp_base.datasource3.mybatis.config.location}" />
		<property name="mapperLocations">
			<list>
				<value>${ncp_base.mybatis.mapper.location}</value>
				<value>${ncp_base.datasource3.mybatis.mapper.location}</value>
			</list>
		</property>
	</bean>

	<bean id="sessionTemplate3" class="org.mybatis.spring.SqlSessionTemplate"
		destroy-method="clearCache">
		<constructor-arg index="0" ref="sessionFactory3" />
		<constructor-arg index="1" value="REUSE" />
	</bean>

	<beans profile=",local,prj,dev,stg,stg2">
		<!-- Main Datasource -->
		<bean id="realDataSource3" class="org.apache.commons.dbcp.BasicDataSource"
			destroy-method="close">
			<property name="driverClassName" value="${ncp_base.oracle.driver}" />
			<property name="url" value="${ncp_base.datasource3.url}" />
			<property name="username" value="${ncp_base.datasource3.user}" />
			<property name="password" value="${ncp_base.datasource3.password}" />
			<property name="initialSize" value="1" />
			<property name="minIdle" value="1" />
			<property name="maxIdle" value="1" />
			<property name="maxActive" value="3" />
			<property name="defaultAutoCommit" value="${ncp_base.datasource3.auto.commit}" />
			<property name="testOnBorrow" value="true" />
			<property name="validationQuery" value="select 1 from dual" />
			<property name="removeAbandoned" value="true" />
		</bean>
	</beans>
	
	
	
	<beans profile="prod">
		<!-- Main Datasource -->
		<bean id="realDataSource3" class="org.apache.commons.dbcp.BasicDataSource"
			  destroy-method="close">
			<property name="driverClassName" value="${ncp_base.oracle.driver}" />
			<property name="url" value="${ncp_base.datasource1.url}" />
			<property name="username" value="${ncp_base.datasource1.user}" />
			<property name="password" value="${ncp_base.datasource1.password}" />
			<property name="initialSize" value="1" />
			<property name="minIdle" value="1" />
			<property name="maxIdle" value="1" />
			<property name="maxActive" value="100" />
			<property name="defaultAutoCommit" value="${ncp_base.datasource1.auto.commit}" />
			<property name="testOnBorrow" value="true" />
			<property name="validationQuery" value="select 1 from dual" />
			<property name="removeAbandoned" value="true" />
		</bean>
	</beans>
</beans>