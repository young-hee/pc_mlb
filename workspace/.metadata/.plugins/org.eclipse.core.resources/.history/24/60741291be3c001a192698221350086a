        result.addHeader("당월소멸코인");
        result.addHeader("최초적립일");
        result.addHeader("회원상태");
        result.addHeader("회원유형");
        result.addHeader("회원속성");
        result.addHeader("언어채널");
        result.addHeader("최종방문일");
        result.addHeader("온라인가입일");
        result.addHeader("통합회원가입일");

