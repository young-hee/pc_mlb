                $('#ordNos').val('');
            }
            
            
        });


        $('#btnSearch').click(function(){
            var ordNos = $('#ordNos').val().trim().split(/\n/g);
            if(ordNos != '') {
                var count = ordNos.length;

                if (count > 1000) {
                    alert('주문번호는 최대 1000개 까지 검색 가능합니다.');
                    return false;
                }
            }

            var param = searchParam(function(id){

                var ordNo = $('#'+id).val().trim().split('\n');

                if(ordNo != ''){
                    if(id =='godNos'){
                        id=$('#godNoCom').val();
                    }
                    for (var int = 0; int < ordNo.length; int++) {
                        var element = ordNo[int];
                        $("#orderNoForm").append('<input type="hidden" name="'+id+'" value="'+element+'">');
                    }
                }

             });

            var dataValue = {
                url : '<c:url value="/od/jsonlistOrderGod.json"/>',
                param : param.serialize(),
                callbackSuccess : onCallbackSuccess,
                callbackError : onCallbackError
            };

            grid1.sendGridData(dataValue);

            $("#orderNoForm").empty();
        });

	  $('.form-folding-btn').click(function(){
		  $('.form-wrap').toggle();
	  });
	  
	  $('#icon-reset').click(function(){

		  $('#brndId').val("");
		  $('#orderForm').each(function() {
			  this.reset();
			 
		  });
		    $('.select-all').removeClass('toggled');
			$('.set-range > a').removeClass('toggled');
			$('.set-range > a').eq(1).addClass('toggled');
			InputUtils.Calendar.init();
		
	  });
	  
	  jQuery("#searchBrndId1").change(function(e){ 
		actionJS.loadSearchBrnd(1, "searchBrndId",$(this).val()); e.preventDefault();
	    $("#brandIdSelect").find("option").remove();  
		$("#brandIdSelect").append("<option value=''>선택</option>"); 
		$("#brndId").val($(this).val());
	  });
	  
	  jQuery("#searchBrndId2").change(function(e){ 
			var parentId = $(this).val(); 
			brngGrpChange(parentId);
			$("#brndId").val($(this).val());
	  });
	  
	  jQuery("#brandIdSelect").change(function(e){ 
			$("#brndId").val($(this).val());
	  });
	  
	  actionJS.initialize();
  });

  function searchParam(fnc) {
		
	  fnc('ordNos');
	  fnc('godNos');
	  
	  if($("#orderNoForm").children().is('input')){
          $("#tempOrdForm").empty();    
          $("#orderNoForm").children().clone(true).appendTo("#tempOrdForm"); 
		  return $("#orderNoForm");
		  
	  }else{
          $("#tempOrdForm").empty();    
          $("#orderForm").children().find('input').clone(true).appendTo("#tempOrdForm");                 
          $("#orderForm").children().find('select').each(function() {                    
              $("#tempOrdForm").append('<input type="hidden" name="'+$(this).attr('name')+'" value="'+$(this).val()+'">');               
          }); 
		  return $("#orderForm");  
	  }
	  
  }
	function onCallbackSuccess(result) {
        $('#grid_01').find('.objbox tbody tr').each(function() {
            var ordNoIndex =grid1.getGridObject().getColIndexById("ordNo");
            var pchIdIndex =grid1.getGridObject().getColIndexById("pchId");
            $(this).children().eq(ordNoIndex).css({"text-decoration":"underline","cursor":"pointer"});
            $(this).children().eq(pchIdIndex).css({"text-decoration":"underline","cursor":"pointer"});
        });
		$(".totalRow").text(result.totalRow);
	}
	
	function onCallbackError() {
// 		console.log('error');
	}
    function doOnRowSelect() {
        
        var grid = grid1.getGridObject();
        
        var colId=grid.getColumnId(grid.getSelectedCellIndex());
        var ordNo = grid.cells(grid.getSelectedId(),grid.getColIndexById("ordNo")).getValue();
        
        if(colId =='ordNo'){
           

            window.open("<c:url value='/od/popupOrder'/>?ordNo="+ordNo, "_blank", "scrollbars=1,resizable=1,height=900,width=1750");
             
        }else if(colId =='pchId'){
            
           var mbrNo =  grid1.getUserData(grid.getSelectedId(),'mbrNo');
            if(mbrNo != ''){
                window.open("<c:url value='/mb/member/view'/>?mbrNo="+mbrNo, "_blank", "scrollbars=1,resizable=1,height=900,width=1750");

            }

        }
      
        
          
    }
    function callbackComId(data){
        $('#partmalComCd').val(data.comId);
    }

  $('#mallId').on("change" , function(){
     if( $(this).val() == '' ) {
    	  $("input:checkbox[id='langCdsKOR']").prop("checked", true);
    	  $("input:checkbox[id='langCdsCHI']").prop("checked", false);
    	  $("input:checkbox[id='langCdsENG']").prop("checked", false);
      } else {
    	  $("input:checkbox[id='langCdsKOR']").prop("checked", true);
    	  $("input:checkbox[id='langCdsCHI']").prop("checked", false);
    	  $("input:checkbox[id='langCdsENG']").prop("checked", false);
      }
  });
  
  var actionJS =  {
  			
  			initialize: function(){
  	   			
  	   			this.brndMaxDepth = 2;
  	   			this.loadSearchBrnd(0,"searchBrndId", "");
  	   			
  	   		},
  			loadSearchBrnd:function(depth, baseIdName, objValue){
  				if( depth > this.brndMaxDepth ) return; 
  				
  				//다음 depth 초기화
  				for( var i = depth+1; i <= this.brndMaxDepth; i++ ){
  					this.initSearchBrnd ( baseIdName+""+i);
  					
  					$("#"+(baseIdName+""+i)).removeAttr("disabled");
  				}	
  				
  				if( objValue == "" && depth > 1){
  					var idKey = baseIdName+""+(depth-1);
  					this.searchBrndId = $("#"+idKey).val();
  				}else if( objValue == "" && depth == 1){
  					this.searchBrndId = "";
  				}else{
  					
  					this.searchBrndId = objValue;
  					var idKey = baseIdName+""+(depth+1);
  					var params = {};
  					params['selBrndId'] = this.searchBrndId;
  	  			    params['searchBrndGrpYn'] = "Y";
  							
  					var data = comAjaxJS.callAjax("/sc/popup/listBrndFromUpperBrndId.json",params);
  					if( comAjaxJS.isSucess(data)){ 
  						if( data.rowData != undefined){
  							
  							if( data.rowData.length == 0 ){
  								//조회된 데이타가 없으면
  								
  								for( var i = depth+1; i <= this.brndMaxDepth; i++ ){
  									disIdKey = baseIdName+""+(depth+1);
  									$("#"+disIdKey).prop("disabled", true);
  								}
  							}else{
  								for( var i in  data.rowData ){
  									obj = data.rowData[i].sysBrnd;
  									$("#"+idKey).append ( "<option value='"+obj.brndId+"'>["+obj.brndId+"] "+obj.brndNm+"</option>");				 
  								}
  							}
  							
  						}
  					}
  					
  				}
  				
  			},
  			initSearchBrnd:function( id ){
  				var cnt = 0;
  				$("#"+id).find("option").each( function(){
  					if( cnt > 0) $(this).remove();
  					cnt++;
  				});
  			}
  			
  	};
  
    function brngGrpChange(parentId){  
		if(parentId){
	  		$.ajax({
				type : "GET",
				dataType : "json",
				url : '<c:url value="/bi/changeBrndCategory.json"/>', 
				data : "parentId="+parentId,
				async : false,
				success : function(data) {  
					$("#brandIdSelect").find("option").remove();  
			 		$("#brandIdSelect").append("<option value=''>전체</option>"); 
					
			 		if (data.results){
				    	for(var i = 0; i < data.results.length; i++) {
				    		$("#brandIdSelect").append("<option value='"+data.results[i].brndId+"'>"+data.results[i].brndNm+"</option>");
				  		}
					}
				}
			});
		} else { 
			$("#brandIdSelect").find("option").remove();  
	 		$("#brandIdSelect").append("<option value=''>전체</option>"); 
		}
	 }
  </script>